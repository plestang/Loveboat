<div class="text-center">
  <div class="banner text-center" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "home_cover.jpg" %>');">

      <div class="banner-content">
        <h1>Loveboat</h1>
        <p>Find your new home on the sea</p>
      </div>
    </div>

</div>

<div class="row">
  <div class="home-cards col-xs-12">
      <% @boats.each do |boat| %>
        <div class="card-trip">
          <img src=<%= cl_image_path boat.photo %>>
          <div class="card-trip-infos">
            <div>
              <h2><%= boat.category %></h2>
              <p><%= boat.description %></p>
            </div>
            <h2 class="card-trip-pricing"><%= link_to "#{boat.price_per_day} â‚¬", boat_path(boat) %></h2>
            <img src='<%= boat.user.photo %>' class="card-trip-user avatar-bordered"/>
          </div>
        </div>
      <% end %>
  </div>
</div>
