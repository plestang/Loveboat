<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-9">
      <div class="main-description">
        <div class="description">
          <div class="title">

          </div>
          <div class="row">
            <div class="options">

              <p> Book as from <%= @boat.price_per_day %> € / day or <%= (@boat.price_per_day * 0.9 * 7).round() %> € / week and save <%= (@boat.price_per_day * 0.1*7).round() %> € </p>
            </div>
            <div class="boat-text">
          </div>
          <div class="row">
            <div class="display_inline">
              <h3><%= @boat.name %></h3><h4>  -  <%= @boat.category %> </h4>
            </div>
          </div>
            <p><%= @boat.description %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-md-3">
      <div class="booking">
        <%= link_to "Book now", new_boat_booking_path(@boat), class: 'btn btn-primary', id:'book_btn'  %>
        </button>
      </div>
    </div>
  </div>
</div>
<div
  id="map"
  style="width: 100%;
  height: 400px;"
