<div class="content">
  <div class="container">
    <h1><%= @user.first_name %> <%= @user.last_name %></h1>
    <div class="profile-grid">
      <div class="card-user main-section">
          <p class="text-center"><%= image_tag @user.photo.url, class: 'img-circle', width: '150' %></p>
          <p><%= @user.email %></p>
          <p><%= @user.phone_number %></p>
          <% if @user == current_user  %>
          <p><a href="#bookings">See my bookings</a> |
          <%= link_to "Edit profile", edit_user_path(@user) %></p>
          <% end  %>
      </div>
      <div class="stats-section">
        <p>Member since</p>
        <h3><%= @user.created_at.strftime("%b %d, %Y") %></h3>

      </div>
      <div class="stats-section">
        <p>Boats</p>
        <h3><%= @user.boats.count %></h3>
      </div>
      <div class="stats-section">
        <p>Rating</p>
          <div class="padded">
            <div class="star-ratings-css">
              <div class="star-ratings-css-top" style="width: <%= ((@user.rating / 5)*125).to_i %>%">
                <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
              </div>
              <div class="star-ratings-css-bottom"><span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
              </div>
            </div>
          </div>
      </div>
      <div class="content-section">
        <h3>More about <%= @user.first_name %></h3>
        <p class="text-justify">
          I hate sailing and boats, they make me throw up!
        </p>
      </div>
    </div>
    <hr>

    <h3>Reviews about <%= @user.first_name %></h3>

  </div>
</div>

