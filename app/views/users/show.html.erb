<div class="container">
  <div class="profile-grid">
    <div class="card-user main-section">
        <%= image_tag @user.photo.url, class: 'img-circle', width: '100' %>
        <!-- <img src="images/seb.jpeg" alt="" width="150" class="img-circle"> -->
        <h2><%= @user.first_name %> <%= @user.last_name %></h2>
        <p><%= @user.email %></p>
        <p><%= @user.phone_number %></p>
        <% if @user == current_user  %>
        <p><a href="#bookings">See my bookings</a></p>
        <p><%= link_to "Edit", edit_user_path(@user) %> | <%= link_to "Delete", user_path(@user), method: :delete %></p>
        <% end  %>
    </div>
    <div class="card stats-section">
      <div class="card-content">
        <h3><%= @user.created_at.strftime("%b %d, %Y") %></h3>
        <p>Member since</p>
      </div>
    </div>
    <div class="card stats-section">
      <div class="card-content">
        <h3>758</h3>
        <p>Rentals</p>
      </div>
    </div>
    <div class="card stats-section">
      <div class="card-content">
        <h3><%= @user.rating %></h3>
        <p>Rating</p>
      </div>
    </div>
    <div class="card content-section">
      <div class="card-content">
        <h3>More about <%= @user.first_name %></h3>
        <p class="text-justify">
          I hate sailing and boats, they make me throw up!
        </p>
      </div>
    </div>
  </div>
    <h2><%= @user.first_name %>'s Boats</h2>
  <div class="row">

    <% @user.boats.each do |boat| %>
      <div class="<col-xs-12 col-sm-6 col-md-4">
        <div class="card-trip">
          <%= link_to boat_path(boat) do %>
          <img src=<%= cl_image_path boat.photo %>>
          <% end %>
          <div class="card-trip-infos">
            <div>
              <h2><%= boat.category %></h2>
              <p><%= boat.description %></p>
            </div>
            <div>
            <h2 class="card-trip-pricing"><%= link_to "#{boat.price_per_day} â‚¬", boat_path(boat) %>
              </h2>
            <img src='<%= boat.user.photo %>' class="avatar-card"/>

            </div>
          </div>
        </div>
      </div>
    <% end %>


  </div>





</div>
</div>
